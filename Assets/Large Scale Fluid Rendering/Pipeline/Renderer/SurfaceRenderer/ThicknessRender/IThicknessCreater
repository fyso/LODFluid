using UnityEngine;
using UnityEngine.Rendering;

abstract public class IThicknessCreater
{
    public IThicknessCreater(CommandBuffer commandBuffer)
    {
        m_CommandBuffer = commandBuffer;
    }
    protected CommandBuffer m_CommandBuffer;
    protected Material m_CalculateThicknessMaterial = Resources.Load<Material>("Materials/Component/CalculateThickness");

    abstract public void GenerateThickness(
        ScriptableRenderContext context,
        RenderTexture fluidThicknessRT,
        RenderTexture sceneDepthRT,
        RenderTexture fluidGBufferRT = null,
        RenderTexture smoothHighDensityParticlesRT = null,
        RenderTexture mergedGBufferRT = null);
}